{% extends 'base.html.twig' %}
{% block title %}Ciné Live{% endblock %}

{% block body %}
    <div class="username">
        <h2>Hello {{  user.username }}</h2>
    </div>
    <div class="groups">
        <h3>Voici tes groupes</h3>
        <div class="group">
        {% for group in user.groupsss %}
            <a href="{{ path('group_show', { 'groupName': group.name }) }}">{{ group.name }}<i></i></a>
        {% endfor %}
        </div>
    </div>
    <div class="sessions">
        <h3>Voici tes séances</h3>
        <div class="session">
            {% for sess in user.session %}
                <a href="{{ path('session_show', { 'sessionName': sess.schedule }) }}">{{ sess.schedule }}<i></i></a>
            {% endfor %}
        </div>
    </div>

{% endblock %}
