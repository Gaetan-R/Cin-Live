{% extends 'base.html.twig' %}
{% block title %}Ciné Live{% endblock %}

{% block body %}
    <div class="username">
        <h2>Hello {{  user.username }}</h2>
    </div>
    <div class="groups">
        <h3>Voici tes groupes</h3>
        <div class="group">
        {% for group in user.groupsss %}
            <p>{{ group.name }}</p>
        {% endfor %}
        </div>
    </div>
    <div class="sessions">
        <h3>Voici tes séances</h3>
        <div class="session">
            {% for sess in user.session %}
                <p>{{ sess.schedule }}</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
